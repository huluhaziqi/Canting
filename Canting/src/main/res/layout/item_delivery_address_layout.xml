<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_white_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_30px"
        android:paddingTop="@dimen/dim_30px">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_30px"
                android:layout_marginStart="@dimen/dim_30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dim_5px"
                    android:layout_marginRight="@dimen/dim_5px"
                    android:gravity="center_vertical"
                    android:text="@string/default_address"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_28px_sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvCantinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@null"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_28px_sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim_30px"
                android:layout_marginStart="@dimen/dim_30px"
                android:layout_marginTop="@dimen/dim_12px"
                android:gravity="center_vertical"
                android:text="@null"
                android:textColor="@color/gray4"
                android:textSize="@dimen/dim_28px_sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivIconSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dim_30px"
            android:layout_marginLeft="@dimen/dim_15px"
            android:layout_marginRight="@dimen/dim_30px"
            android:layout_marginStart="@dimen/dim_15px"
            android:src="@mipmap/icon_selected"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/dim_24px"
            android:layout_height="@dimen/dim_24px"
            android:layout_marginEnd="@dimen/dim_30px"
            android:layout_marginLeft="@dimen/dim_15px"
            android:layout_marginRight="@dimen/dim_30px"
            android:layout_marginStart="@dimen/dim_15px"
            android:src="@mipmap/icon_next_arrow"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray3"/>

</LinearLayout>