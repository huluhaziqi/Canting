<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llCommon"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/dim_30px">

    <TextView
        android:id="@+id/common_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim_28px_sp"
        android:textColor="@color/gray4"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/common_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="@dimen/dim_28px_sp"
        android:textColor="@color/gray1"/>
    
    <ImageView
        android:id="@+id/common_img"
        android:layout_width="@dimen/dim_24px"
        android:layout_height="@dimen/dim_24px"
        android:layout_marginLeft="@dimen/dim_16px"
        android:src="@mipmap/next"/>

</LinearLayout>
