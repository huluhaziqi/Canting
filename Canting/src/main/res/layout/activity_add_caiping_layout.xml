<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAddCaipin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_28px"
                    android:paddingTop="@dimen/dim_28px"
                    android:text="@null"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dim_32px_sp"/>

                <TextView
                    android:id="@+id/tvContinueToAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/bg_gray_selector"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_28px"
                    android:paddingTop="@dimen/dim_28px"
                    android:text="@string/continue_to_add"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dim_32px_sp"/>

                <TextView
                    android:id="@+id/tvCompleter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/bg_green_selector"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_28px"
                    android:paddingTop="@dimen/dim_28px"
                    android:text="@string/completer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_32px_sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSvae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_green_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/dim_28px"
                android:paddingTop="@dimen/dim_28px"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_32px_sp"/>
        </LinearLayout>
    </LinearLayout>

    <cn.caimatou.canting.widget.GLCustomScrollView
        android:id="@+id/svView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:background="@color/transparent"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dim_30px"
                android:background="@color/gray3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/gl_white_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_30px"
                android:paddingRight="@dimen/dim_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/cai_name"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_28px_sp"/>

                <EditText
                    android:id="@+id/etCaiName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_24px"
                    android:layout_marginStart="@dimen/dim_24px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:paddingBottom="@dimen/dim_30px"
                    android:paddingTop="@dimen/dim_30px"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/dim_28px_sp"
                    android:textStyle="normal"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/gl_white_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_30px"
                android:paddingRight="@dimen/dim_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/cai_count"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_28px_sp"/>

                <EditText
                    android:id="@+id/etCaiCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_24px"
                    android:layout_marginStart="@dimen/dim_24px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:paddingBottom="@dimen/dim_30px"
                    android:paddingTop="@dimen/dim_30px"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/dim_28px_sp"
                    android:textStyle="normal"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>

            <LinearLayout
                android:id="@+id/llCaiUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/gl_white_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dim_30px"
                android:paddingLeft="@dimen/dim_30px"
                android:paddingRight="@dimen/dim_30px"
                android:paddingTop="@dimen/dim_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/cai_unit"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_28px_sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/dim_30px"
                    android:layout_marginStart="@dimen/dim_30px"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvCaiUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="@dimen/dim_24px"
                        android:layout_marginRight="@dimen/dim_24px"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/dim_28px_sp"/>

                    <ImageView
                        android:layout_width="@dimen/dim_24px"
                        android:layout_height="@dimen/dim_24px"
                        android:layout_marginLeft="@dimen/dim_12px"
                        android:layout_marginStart="@dimen/dim_12px"
                        android:src="@mipmap/icon_next_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>

            <EditText
                android:id="@+id/etOtherUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/enter_unit"
                android:imeOptions="actionNext"
                android:paddingBottom="@dimen/dim_24px"
                android:paddingLeft="@dimen/dim_30px"
                android:paddingRight="@dimen/dim_30px"
                android:paddingTop="@dimen/dim_30px"
                android:singleLine="true"
                android:textColor="@color/gray1"
                android:textSize="@dimen/dim_28px_sp"
                android:textStyle="normal"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_155px"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dim_30px"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/add_note"
                android:imeOptions="actionDone"
                android:paddingBottom="@dimen/dim_24px"
                android:paddingLeft="@dimen/dim_30px"
                android:paddingRight="@dimen/dim_30px"
                android:scrollbars="none"
                android:textColor="@color/gray1"
                android:textSize="@dimen/dim_28px_sp"
                android:textStyle="normal"/>
        </LinearLayout>

    </cn.caimatou.canting.widget.GLCustomScrollView>

    <RelativeLayout
        android:id="@+id/rlShoppingCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:id="@+id/flShoppingCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_30px"
            android:layout_marginStart="@dimen/dim_30px">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/dim_30px"
                android:src="@mipmap/icon_shopping_cart"/>
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:background="@mipmap/icon_orange">
                <TextView
                    android:id="@+id/tvCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@null"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_22px_sp"/>

            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>