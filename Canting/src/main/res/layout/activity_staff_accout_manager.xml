<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_114px"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/dim_20px"
        android:paddingBottom="@dimen/dim_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/post_manager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_74px"
            android:layout_marginLeft="@dimen/dim_30px"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_selector"
            android:gravity="center"
            android:textSize="@dimen/dim_32px_sp"
            android:text="@string/staff_post_manager"
            android:textColor="@color/gray4"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/staff_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_74px"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dim_30px"
            android:layout_marginRight="@dimen/dim_30px"
            android:background="@drawable/btn_orange_selector"
            android:gravity="center"
            android:textSize="@dimen/dim_32px_sp"
            android:textColor="@color/white"
            android:text="@string/staff_add"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_above="@id/btns"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray3" />

    <ListView
        android:id="@+id/staff_list"
        android:layout_above="@id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </ListView>

</RelativeLayout>
