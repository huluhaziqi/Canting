<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_24px"
        android:paddingTop="@dimen/dim_30px"
        android:paddingBottom="@dimen/dim_30px"
        android:paddingLeft="@dimen/dim_24px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_28px_sp"
            android:textColor="@color/gray4"
            android:text="@string/shop_intro" />

        <TextView
            android:id="@+id/shop_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_30px"
            android:maxLines="3"
            android:textSize="@dimen/dim_24px_sp"
            android:textColor="@color/gray1"/>

    </LinearLayout>


</LinearLayout>
