<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_baocai_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dim_24px"
        android:layout_marginTop="@dimen/dim_30px"
        android:text="@string/provider_name"
        android:textSize="@dimen/dim_28px_sp"
        android:textColor="@color/gray4"/>

    <TextView
        android:id="@+id/item_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dim_24px"
        android:layout_marginTop="@dimen/dim_10px"
        android:layout_marginBottom="@dimen/dim_24px"
        android:text="@string/provider_name"
        android:textColor="@color/gray1"
        android:textSize="@dimen/dim_24px_sp"/>

    <TextView
        android:id="@+id/item_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_24px"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_list_count"
        android:layout_below="@id/item_list_name"
        android:layout_marginTop="@dimen/dim_10px"
        android:gravity="right"
        android:textSize="@dimen/dim_28px_sp"/>

</RelativeLayout>
