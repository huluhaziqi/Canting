<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dim_82px"
    android:paddingBottom="@dimen/dim_30px"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray3" />

    <TextView
        android:id="@+id/choose_post_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dim_30px"
        android:text="@string/staff_post_manager"
        android:textSize="@dimen/dim_24px_sp"
        android:textColor="@color/gray4"/>

</LinearLayout>
