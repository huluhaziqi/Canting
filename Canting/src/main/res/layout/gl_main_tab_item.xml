<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gl_tab_bottom_bg">
    <LinearLayout
        android:id="@+id/llTabView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/gl_gray_bg_selector"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivTabIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:src="@null"/>
        <TextView
            android:id="@+id/tvTabTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/gray4"
            android:textSize="14sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivTabIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/llTabView"
        android:layout_toRightOf="@+id/llTabView"
        android:padding="5dp"
        android:src="@drawable/gl_image_shape_circle_red"
        android:visibility="gone"/>

</RelativeLayout>
