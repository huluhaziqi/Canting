<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ivPullIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:background="@mipmap/pull_icon_big"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivRefreshingIcon"
                android:layout_width="@dimen/dim_32px"
                android:layout_height="@dimen/dim_32px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:background="@mipmap/loading"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvRefreshState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pull_to_refresh"
                android:textColor="@color/gray1"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ivRefreshState"
                android:layout_width="@dimen/dim_32px"
                android:layout_height="@dimen/dim_32px"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/tvRefreshState"
                android:src="@null"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>